<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/total_content"
    android:id="@+id/rlmain"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rnning_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <include layout="@layout/music_bottom" ></include>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlcomrunning"
        android:layout_above="@id/rnning_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/running_commonshow">
        </include>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rlmapview"
        android:layout_above="@id/rnning_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/running_maprun">
        </include>
    </RelativeLayout>
</RelativeLayout>

