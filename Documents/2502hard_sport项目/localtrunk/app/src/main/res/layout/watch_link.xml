<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    xmlns:watchSettingItem="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llayot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <com.walnutin.view.TopTitleLableView
        android:id="@id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        topTitle:back="返回"
        topTitle:lableText="手表设置"></com.walnutin.view.TopTitleLableView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_transparent"
        android:visibility="visible" />


    <RelativeLayout
        android:id="@+id/linking_device"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="14dip"
            android:background="@drawable/group_search" />

        <TextView
            android:id="@+id/tv_linking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:inputType="number"
            android:text="连接设备"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />


        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical"
            android:text="未连接" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/bitmap_clicked" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llbelowView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.walnutin.view.LineItemView
                    android:id="@+id/unLock"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    watchSettingItem:centerTitle="智能解锁">

                </com.walnutin.view.LineItemView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/closeblue" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.walnutin.view.LineItemView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    watchSettingItem:centerTitle="智能防丢"></com.walnutin.view.LineItemView>

                <ImageView
                    android:id="@+id/unLost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/closeblue" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.walnutin.view.LineItemView
                    android:id="@+id/longSitMinitueSet"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    watchSettingItem:centerTitle="久坐提醒"></com.walnutin.view.LineItemView>

                <ImageView
                    android:id="@+id/longSitNotice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/closeblue" />
            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_color"></View>

            <RelativeLayout
                android:id="@+id/repeat_rl"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/left_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/dial" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="亮屏时间"
                    android:textColor="@color/font_defaults" />

                <ImageView
                    android:id="@+id/arrow_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/personal_item_arrow" />

                <TextView
                    android:id="@+id/ShunScreenTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/arrow_one"
                    android:text="10秒"
                    android:textColor="@color/font_defaults"
                    android:textSize="14sp" />
            </RelativeLayout>

            <com.walnutin.view.LineItemView
                android:id="@+id/findBracelet"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="查找手环"></com.walnutin.view.LineItemView>

            <com.walnutin.view.LineItemView
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="智能闹钟">

            </com.walnutin.view.LineItemView>

            <com.walnutin.view.LineItemView
                android:id="@+id/modifyScreenPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="修改锁屏密码"></com.walnutin.view.LineItemView>

            <com.walnutin.view.LineItemView
                android:id="@+id/pushMsg"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="消息推送"></com.walnutin.view.LineItemView>

            <com.walnutin.view.LineItemView
                android:id="@+id/showElectric"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="电量显示"></com.walnutin.view.LineItemView>

            <com.walnutin.view.LineItemView
                android:id="@+id/mapTrack"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                watchSettingItem:centerTitle="地图轨迹"></com.walnutin.view.LineItemView>

            <!--手表系统设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/watch_system" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="手表系统设置"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <!--提醒设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/remindsetting" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="提醒设置"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="关" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <!--表盘设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/dial" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="表盘设置"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="关" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>

            <!--权限设置-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/permission" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="权限设置"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="关" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />


            <!--同步-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/sync" />

                <TextView
                    android:id="@+id/devSleepSync"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="同步睡眠"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text="未同步" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>


            <!--更新-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/updata" />

                <TextView
                    android:id="@+id/devHeartSync"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:text="同步心率"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="未同步" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>


            <!--系统还原-->
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:orientation="horizontal">>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="14dip"
                    android:background="@drawable/restore" />

                <TextView
                    android:id="@+id/devStepSync"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:inputType="number"
                    android:text="同步步数"
                    android:textColor="@color/font_defaults"
                    android:textSize="@dimen/font_default_size" />


                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:background="@color/grey_transparent"
                    android:visibility="visible" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
