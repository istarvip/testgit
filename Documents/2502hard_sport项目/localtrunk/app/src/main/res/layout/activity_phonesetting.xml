<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:fadingEdge="none"
    android:focusableInTouchMode="false"
    android:overScrollMode="never"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 手机设置 -->

        <com.walnutin.view.TopTitleLableView
            android:id="@id/topTitle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            app:back="返回"
            app:lableText="手机设置">

        </com.walnutin.view.TopTitleLableView>

        <!--我的资料-->
        <RelativeLayout
            android:id="@id/setting_data"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/setting_data" />

            <TextView
                android:id="@id/setting_information"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/my_profile"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@id/setting_goal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/goal" />

            <TextView
                android:id="@+id/setting_aim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/my_goals"
                android:textSize="18.0dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="1000步"
                android:textColor="@color/grayfont" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@id/setting_goal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">>


            <TextView
                android:id="@+id/setting_bind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/binding_information"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/bindinformation" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

        </RelativeLayout>

        <!-- 自动暂停 -->

        <RelativeLayout
            android:id="@id/setting_autopause"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/setting_bind"
            android:layout_marginTop="30dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/setting_stop" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/auto_pause"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@id/setting_stopswitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="开"
                android:textColor="@color/grayfont" />
        </RelativeLayout>

        <!-- 语音提示 -->

        <RelativeLayout
            android:id="@id/setting_voice"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@id/setting_autopause"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/voice_prompt"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@id/setting_voicewitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="开"
                android:textColor="@color/grayfont" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:src="@drawable/setting_voice" />
        </RelativeLayout>

        <!-- 自动夜间模式 -->

        <RelativeLayout
            android:id="@id/setting_nightmode"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/Night_mode"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="开"
                android:textColor="@color/grayfont" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/nightmode" />
        </RelativeLayout>

        <!-- 后台运行权限设置 -->

        <RelativeLayout
            android:id="@id/setting_purviewsetting"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="@string/background_permissions"
                android:textSize="18.0dip" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="开"
                android:textColor="@color/grayfont" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                android:src="@drawable/purviewsetting" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/setting_bind"
            android:background="@color/grey_transparent"
            android:visibility="visible" />

        <!-- 用户反馈信息 -->

        <RelativeLayout
            android:id="@id/setting_userfeedback"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="购物车"
                android:textSize="18.0dip" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/setting_bind"
            android:background="@color/grey_transparent"
            android:visibility="visible" />

        <!-- 关于我们 -->
        <RelativeLayout
            android:id="@id/setting_aboutwe"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:text="订单"
                android:textSize="18.0dip" />


            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text=""
                android:textColor="@color/grayfont" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="14dp"
                />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/grey_transparent"
            android:visibility="visible" />

        <Button
            android:id="@id/logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/log_out"
            android:textColor="@android:color/holo_red_light"
            android:textSize="14.0dip" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/setting_bind"
            android:background="@color/grey_transparent"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>