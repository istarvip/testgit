<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


        <ImageView
            android:id="@+id/turntable_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/dish_back" />

    <ImageView
        android:id="@+id/rotate_ba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rotate_back"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/turntable_back"
        android:layout_alignStart="@+id/turntable_back" />
</RelativeLayout>