<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.walnutin.view.TopTitleLableView
        android:id="@id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        topTitle:back="设置"
        topTitle:lableText="绑定信息" />
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:background="@color/line_color"
    ></View>
    <!-- 手机号码 -->
    <RelativeLayout
        android:id="@id/bind_phone"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_data"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_centerVertical="true"
            android:text="手机号码"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />
        <TextView
            android:id="@id/bind_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="未绑定" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_transparent"
        android:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/thirdParty_register"
        android:textColor="#c3c3c3"
        android:textSize="14.0dip" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_transparent"
        android:visibility="visible" />

    <!-- QQ帐号 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_bind"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_centerVertical="true"
            android:text="@string/QQ_accounts"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <TextView
            android:id="@id/third_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="未绑定"
             />
    </RelativeLayout>

    <!-- 微信帐号 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/setting_bind"
        android:background="@color/white"
        android:orientation="horizontal">
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/grey_transparent"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_centerVertical="true"
            android:text="@string/wechat_accounts"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <TextView
            android:id="@id/third_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="未绑定"
            />
    </RelativeLayout>


    <!-- 新浪微博帐号 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@id/setting_bind"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/grey_transparent"
            android:visibility="visible" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_centerVertical="true"
            android:text="@string/sina_accounts"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <TextView
            android:id="@id/third_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="未绑定"
            />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/grey_transparent"
        android:visibility="visible" />

</LinearLayout>
  
