<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rlkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@id/km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="bottom"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_km_font" />

        <TextView
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/km"
            android:text="."
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_km_font" />

        <TextView
            android:id="@id/km_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot"
            android:gravity="bottom"
            android:text="0"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_km_font" />

        <TextView
            android:id="@id/km_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/km_1"
            android:text="0"
            android:gravity="bottom"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_km_font" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txtkm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlkm"
        android:layout_centerHorizontal="true"
        android:text="公里"
        android:textColor="@color/half_gray"
        android:textSize="25sp" />

    <RelativeLayout
        android:id="@+id/rlchron"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtkm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp">

        <Chronometer
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/chronhms"
            android:format="00:00:00"
            android:textColor="@color/font_defaults"
            android:textSize="50sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlchron"
        android:layout_marginTop="30dp"
        android:gravity="bottom">

        <TextView
            android:id="@id/txt_running_mk0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="0dp"
            android:text="0"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_time_font" />

        <TextView
            android:id="@id/txt_running_mk1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txt_running_mk0"
            android:paddingBottom="0dp"
            android:text="0"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_time_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignBottom="@id/txt_running_mk0"
            android:layout_toRightOf="@id/txt_running_mk1"
            android:paddingBottom="10dp"
            android:gravity="bottom"
            android:text="min/km"
            android:textColor="@color/font_defaults"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_running_mk1"
            android:layout_below="@id/txt_running_mk0"
            android:text="配速"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlcaro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/rlchron"
        android:layout_marginTop="20dp"

        >

        <TextView
            android:id="@+id/txtcaro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_running_caro2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="bottom"
            android:paddingBottom="10dp"
            android:text="Cal"
            android:textColor="@color/font_defaults"
            android:textSize="20sp" />

        <TextView
            android:id="@id/txt_running_caro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtcaro"
            android:text="0"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_time_font" />

        <TextView
            android:id="@id/txt_running_caro1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txt_running_caro2"
            android:layout_toStartOf="@id/txt_running_caro2"
            android:text="0"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/running_time_font" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_running_caro2"
            android:layout_below="@id/txt_running_caro2"
            android:text="热量"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rlcaro"
        android:layout_marginTop="25dp">

        <ImageButton
            android:id="@+id/running_img_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/running_start" />

        <ImageButton
            android:id="@+id/running_img_conntinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/running_img_play"
            android:background="@drawable/running_continue" />


        <ImageButton
            android:id="@+id/running_img_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/running_img_play"
            android:background="@drawable/running_end" />

    </RelativeLayout>
</RelativeLayout>