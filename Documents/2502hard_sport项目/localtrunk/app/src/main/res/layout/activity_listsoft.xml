<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/total_content"
    android:orientation="vertical">

    <com.walnutin.view.TopTitleLableView
        android:id="@id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        topTitle:back="返回"
        topTitle:lableText="软件列表"></com.walnutin.view.TopTitleLableView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/grey_transparent"
        android:visibility="visible" />
    <ListView
        android:id="@+id/appListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:divider="#40000000"
        android:dividerHeight="1px" />

</LinearLayout>
