<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:focusableInTouchMode="false"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.walnutin.view.TopTitleLableView
                android:id="@id/topTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                topTitle:back="返回"
                topTitle:lableText="连接手机/手表"></com.walnutin.view.TopTitleLableView>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:layout_marginTop="10dp"
                android:background="@color/grey_transparent"
                android:visibility="visible" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="14dp"
                    android:background="@color/transparent"
                    android:gravity="center_vertical"
                    android:hint="蓝牙状态"
                    android:inputType="number"
                    android:textColor="@color/text_color"
                    android:textSize="15dp" />


                <ImageView
                    android:id="@+id/blue_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/closeblue" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/phone_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#808080"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/my_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="最近配对"
                android:textColor="#808080"
                android:textSize="12dp" />

            <com.walnutin.view.SquareListView
                android:id="@+id/lv_connected"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />


            <View
                android:id="@+id/first_wire"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/grey_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/other_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="其他设备"
                android:textColor="#808080"
                android:textSize="12dp" />


            <com.walnutin.view.SquareListView
                android:id="@+id/lv_device"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>