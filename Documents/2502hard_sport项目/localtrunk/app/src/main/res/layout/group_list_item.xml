<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/group_list_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="核桃科技"
                android:textColor="@color/font_defaults"
                android:textSize="@dimen/font_default_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="("
                android:textColor="@color/font_defaults"
                android:textSize="@dimen/font_default_size" />

            <TextView
                android:id="@id/group_list_Num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="7"
                android:textColor="@color/font_defaults"
                android:textSize="@dimen/font_default_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=")"
                android:textColor="@color/font_defaults"
                android:textSize="@dimen/font_default_size" />

            <TextView
                android:id="@id/group_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="企业"
                android:textSize="10dp" />


            <TextView
                android:id="@id/group_list_describle"
                android:gravity="right|center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxEms="3"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="跑步"
                android:textSize="12dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <com.walnutin.view.CircleImageView
                android:id="@+id/group_list_img1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                app:border_width="0dp"
               app:border_color="@color/white"

                />
            <!--android:src="@drawable/running_person"-->

            <com.walnutin.view.CircleImageView
                android:id="@id/group_list_img2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:border_width="0dp"
                app:border_color="@color/white"

                />

            <com.walnutin.view.CircleImageView
                android:id="@id/group_list_img3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:border_width="0dp"
                app:border_color="@color/white"

                />

            <com.walnutin.view.CircleImageView
                android:id="@id/group_list_img4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:border_width="0dp"
                app:border_color="@color/white"

                />

            <com.walnutin.view.CircleImageView
                android:id="@id/group_list_img5"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:border_width="0dp"
                app:border_color="@color/white"

                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

