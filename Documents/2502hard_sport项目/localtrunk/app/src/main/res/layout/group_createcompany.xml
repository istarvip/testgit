<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical"
            android:text="公司名称"
            android:textColor="@color/lable_text_color"
            android:textColorHint="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <EditText
            android:id="@+id/edt_inputCompanyName"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint=""
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical"
            android:text="公司规模"
            android:textColor="@color/lable_text_color"
            android:textColorHint="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <EditText
            android:id="@+id/edt_inputGroupCompanyScale"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:maxLength="8"
            android:gravity="center_vertical"
            android:hint=""
            android:inputType="number"
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical"
            android:text="您的姓名"
            android:textColor="@color/lable_text_color"
            android:textColorHint="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <EditText
            android:id="@+id/edt_inputGroupCreatorName"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint=""
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_left"
            android:gravity="center_vertical"
            android:text="手机号码"
            android:textColor="@color/lable_text_color"
            android:textColorHint="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />

        <EditText
            android:id="@+id/edt_inputGroupCompanyMail"
            android:layout_marginLeft="@dimen/margin_left_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:maxLength="11"
            android:hint=""
            android:textColor="@color/font_defaults"
            android:textSize="@dimen/font_default_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"></View>

    <Button
        android:id="@id/btn_group_company_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/login_login_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>

