<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:topTitle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/total_content"
    android:orientation="vertical">

    <com.walnutin.view.TopTitleLableView
        android:id="@id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        topTitle:back="返回"
        topTitle:lableText="闹钟列表"></com.walnutin.view.TopTitleLableView>

    <com.walnutin.view.RelativeAlarmView
        android:background="@color/white"
        android:id="@+id/rlFirstAlarm"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.walnutin.view.RelativeAlarmView>

    <com.walnutin.view.RelativeAlarmView
        android:id="@+id/rlSecondAlarm"
        android:layout_width="match_parent"
        android:background="@color/white"

        android:layout_height="50dp">

    </com.walnutin.view.RelativeAlarmView>

    <com.walnutin.view.RelativeAlarmView
        android:id="@+id/rlThirdtAlarm"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </com.walnutin.view.RelativeAlarmView>
</LinearLayout>
