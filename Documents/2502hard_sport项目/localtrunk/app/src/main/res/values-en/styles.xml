<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Hard" parent="@android:style/Theme.Holo.Light">
        <item name="android:icon">@null</item>
        <item name="android:activityOpenEnterAnimation">@anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_out</item>
        <item name="android:listSelector">@drawable/list_item_bg</item>
        <item name="android:selectableItemBackground">@drawable/list_item_bg</item>
        <item name="android:colorPressedHighlight">@drawable/list_item_bg</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="MyappTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:listDivider">@color/line_color</item>-->

    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="PcmTextAppearance" parent="@android:style/Theme.Holo.Light">

        <!-- <item name="textColor">?textColorPrimaryInverse</item> -->
        <item name="android:textColor">#000000</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>

        <!-- <item name="android:menuItemBackground">@color/read</item> -->

    </style>
</resources>
